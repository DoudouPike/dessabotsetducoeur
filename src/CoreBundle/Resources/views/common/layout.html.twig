<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DS&DC - {% block title %}Des Sabots et du Cœur{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/plugins/bootstrap3/css/bootstrap.min.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('assets/plugins/bootstrap3/css/bootstrap-theme.min.css') }}" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=BioRhyme+Expanded" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/dist/style/css/style.css') }}" type="text/css">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('assets/plugins/fontawesome-5.0.6/svg-with-js/js/fontawesome-all.js') }}"></script>
        <script src="{{ asset('assets/plugins/jquery/jquery-1.10.2.js') }}"></script>
        <script src="{{ asset('assets/plugins/jquery/jquery-ui.custom.min.js') }}"></script>
        <script src={{ asset('assets/plugins/bootstrap3/js/bootstrap.min.js') }}></script>
    {% endblock %}
</head>
<body>
    <div class="container-fluid">
        <header>
            <div id="navbar">
                {% include 'CoreBundle:common:menu.html.twig' %}
            </div>
        </header>
        <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-10 col-md-offset-1">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
            <footer>
                <p>© {{ 'now'|date('Y') }}</p>
            </footer>
        </div>
    </div>
</body>
</html>
